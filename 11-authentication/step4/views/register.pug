extends layout

block content
		
	//- error handling
	if errors
		.row
			.collection.form-msg.col.s6
				each error in locals.errors
					a(href="#!" class="collection-item red lighten-4  red-text text-darken-4")= error.msg
	
	br
	.row
		.col.s12
			h5 Registeration form
			form.col.s12(action="/users/register" method="post")
				.row
					.input-field.col.s6
						input#name.validate(type='text' name='name')
						label(for='name') Name
				.row
					.input-field.col.s6
						input#username.validate(type='text' name='username')
						label(for='username') Username
				.row
					.input-field.col.s6
						input#password.validate(type='password' name='password')
						label(for='password') Password
				.row
					.input-field.col.s6
						input#password2.validate(type='password' name='password2')
						label(for='password2') Confirm Password
				.row
					.input-field.col.s6
						input#email.validate(type='email' name='email')
						label(for='email') Email
				.row
					.col.s3
						button.btn.waves-effect.waves-light(type='submit') Submit