extends layout

block content
  h1= title
  p Welcome to #{title}
  //- sample form from http://materializecss.com/forms.html

  .row
  form.col.s12
    //- form.col.s12(action="/get" method="get")
    .row
      .input-field.col.s6
        input#first_name.validate(placeholder='Placeholder', type='text', name="user[firstName]")
        label(for='first_name') First Name
      .input-field.col.s6
        input#last_name.validate(type='text', name="user[lastName]")
        label(for='last_name') Last Name

    .row
      //- MUST SPECIFY type="button" to prevent submission
      button.btn.waves-effect.waves-light(type="button", onclick="submitForm()")
        | Submit
        i.material-icons.right cloud

  script(src="/bower_components/jquery/dist/jquery.min.js")
  script(src="/bower_components/materialize/dist/js/materialize.min.js")
  script(src="js/script.js")
